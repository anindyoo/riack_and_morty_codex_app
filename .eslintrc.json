{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "react-app",
        "airbnb",
        "plugin:jsx-a11y/recommended"
    ],
    "overrides": [
        {
          "env": {
            "node": true
          },
          "files": [".eslintrc.{js,cjs}"],
          "parserOptions": {
            "sourceType": "script"
          }
        }
      ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "jsx-a11y"
    ],
    "rules": {
        "global-require": "off",
        "import/no-dynamic-require": "off",
        "react/react-in-jsx-scope": "off",
        "react/prop-types": "off",
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "react/function-component-definition": [
            2,
            {
              "namedComponents": "arrow-function"
            }
        ]
    }
}
